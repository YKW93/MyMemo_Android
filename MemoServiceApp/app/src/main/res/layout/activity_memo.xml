<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_memo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bignerdranch.android.memoserviceapp.MemoWriteActivity"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="#f1f1f1"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="#6e000000"/>
            <EditText
                android:id="@+id/memoActivity_editText_title"
                android:hint="제목"
                android:layout_width="match_parent"
                android:background="@null"
                android:gravity="center"
                android:maxLines="1"
                android:layout_marginTop="18dp"
                android:privateImeOptions="defaultInputmode=korean"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/memoActivity_editText_content"
                android:hint="메모할 내용을 적어주세요."
                android:layout_width="match_parent"
                android:background="@null"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="40dp"
                android:privateImeOptions="defaultInputmode=korean"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:background="#6e000000"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/photo_ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
